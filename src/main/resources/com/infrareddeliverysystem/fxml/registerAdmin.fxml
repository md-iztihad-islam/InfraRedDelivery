<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.infrareddeliverysystem.controllers.RegisterAdminController">
    <children>
        <AnchorPane fx:id="top_bar" layoutY="-10.0" prefHeight="136.0" prefWidth="800.0" stylesheets="@style.css">
            <children>
                <Label fx:id="title_label" layoutY="41.0" stylesheets="@style.css" text="InfraRed Courier Delivery System">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="menuButton" alignment="CENTER" layoutX="356.0" layoutY="43.0" mnemonicParsing="false" onAction="#onHomeButton" prefHeight="48.0" prefWidth="87.0" stylesheets="@style.css" text="Home" wrapText="true" />
                <Button fx:id="menuButton" alignment="CENTER" layoutX="503.0" layoutY="43.0" mnemonicParsing="false" onAction="#onAdminButton" prefHeight="48.0" prefWidth="87.0" stylesheets="@style.css" text="Admin" textAlignment="CENTER" />
                <Button fx:id="menuButton" alignment="CENTER" layoutX="644.0" layoutY="43.0" mnemonicParsing="false" onAction="#onStaffButton" prefHeight="48.0" prefWidth="87.0" stylesheets="@style.css" text="Staff" />
            </children>
        </AnchorPane>
        <AnchorPane fx:id="adminRegisterBox" layoutX="200.0" layoutY="180.0" prefHeight="260.0" prefWidth="400.0" stylesheets="@style.css">
            <children>
                <TextField fx:id="adminName" layoutX="131.0" layoutY="35.0" prefHeight="40.0" prefWidth="230.0" promptText="Enter Name" />
                <Label layoutX="61.0" layoutY="46.0" text="Name">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="adminUsername" layoutX="132.0" layoutY="87.0" prefHeight="40.0" prefWidth="228.0" promptText="Enter Username" />
                <Label layoutX="51.0" layoutY="97.0" text="Username">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="adminPassword" layoutX="133.0" layoutY="138.0" prefHeight="40.0" prefWidth="228.0" promptText="Enter Password" />
                <Label layoutX="49.0" layoutY="148.0" text="Password">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="menuButton" layoutX="128.0" layoutY="204.0" mnemonicParsing="false" onAction="#registerAdmin" prefHeight="40.0" prefWidth="143.0" stylesheets="@style.css" text="Register" />
            </children>
        </AnchorPane>
        <Button fx:id="menuButton" layoutX="644.0" layoutY="525.0" mnemonicParsing="false" onAction="#switchToOffice" prefHeight="48.0" prefWidth="87.0" stylesheets="@style.css" text="Back" />
    </children>
</AnchorPane>
